<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:toucharea="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cl"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_main_mini"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:contentDescription="@string/todo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/tb_ph_flag" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/tb_ph_date"
        android:fontFamily="@font/astloch"
        android:gravity="center_vertical|center_horizontal"
        android:text="@string/field_date"
        android:textColor="@android:color/white"
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <eniac.konstantin.emblem.CustomButton
        android:id="@+id/button_menu"
        android:layout_width="162dp"
        android:layout_height="87dp"
        android:layout_marginBottom="47dp"
        android:background="@drawable/ic_menu"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/button_normal"
        app:layout_constraintStart_toStartOf="parent"
        toucharea:toucharea="@array/touch_area_menu_button" />

    <eniac.konstantin.emblem.CustomButton
        android:id="@+id/button_shop"
        android:layout_width="162dp"
        android:layout_height="87dp"
        android:layout_marginTop="47dp"
        android:background="@drawable/ic_shop"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_pause"
        toucharea:toucharea="@array/touch_area_shop_button" />

    <eniac.konstantin.emblem.CustomButton
        android:id="@+id/button_pause"
        android:layout_width="162dp"
        android:layout_height="87dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/ic_pause"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/button_normal"
        app:layout_constraintEnd_toEndOf="parent"
        toucharea:toucharea="@array/touch_area_pause_button" />

    <eniac.konstantin.emblem.CustomButton
        android:id="@+id/button_normal"
        android:layout_width="162dp"
        android:layout_height="87dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/ic_normal"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        toucharea:toucharea="@array/touch_area_normal_button" />

    <eniac.konstantin.emblem.CustomButton
        android:id="@+id/button_accelerated"
        android:layout_width="162dp"
        android:layout_height="87dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/ic_accelerated"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_normal"
        toucharea:toucharea="@array/touch_area_accelerated_button" />


</android.support.constraint.ConstraintLayout>